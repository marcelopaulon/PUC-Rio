package game;

import java.awt.Graphics;
import java.awt.Graphics2D;

import javax.swing.JLabel;
import javax.swing.JPanel;

import boardInfo.Board;
import playerInfo.PlayerColor;

public class GamePanel extends JPanel {

	// Game Board
	private Board board;

	private final int rectSizeX = 375;
	private final int rectSizeY = 255;
	
	public GamePanel()
	{
		super();
		
		// Create the game board
		board = new Board();
	}
	
	private void renderBoard(Graphics2D g2d)
	{
		for(int i = 1; i <= 4; i++)
		{
			PlayerColor playerColor = PlayerColor.get(i);
			g2d.setColor(PlayerColor.getColor(playerColor));
			int coordinateX = (i-1) / 2;
			int coordinateY = (i-1) % 2;
			g2d.drawRect(coordinateX*rectSizeX, coordinateY*rectSizeY, rectSizeX, rectSizeY);
		}
	}
	
	@Override
	public void paintComponent(Graphics g) {
		super.paintComponent(g);
		Graphics2D g2d = (Graphics2D)g;
		renderBoard(g2d);
	}
}
